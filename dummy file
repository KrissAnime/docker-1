Dockerfile - 1

FROM ruby:latest

RUN apt-get update  && apt-get install -y nodejs rails

RUN mkdir /ruby_app

COPY Gemfile /ruby_app/Gemfile

COPY Gemfile.lock /ruby_app/Gemfile.lock

WORKDIR /ruby_app

# RUN ls

RUN gem install rake && bundle install && rails new /hello_world --force --skip-namespace

# RUN ls && ls /hello_world

WORKDIR /hello_world

Dockerfile - 2

FROM ft-rails:on-build
EXPOSE 3000
CMD ["rails", "s", "-b", "0.0.0.0", "-p", "3000"]

Gemfile

source 'https://rubygems.org'
gem 'rails', '~>5'
