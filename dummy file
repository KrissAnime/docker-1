Dockerfile - 1

FROM ruby:latest

RUN apt-get update  && apt-get install -y nodejs rails

RUN mkdir /ruby_app

COPY /ruby-container/Gemfile /ruby_app/Gemfile

COPY /ruby-container/Gemfile.lock /ruby_app/Gemfile.lock

WORKDIR /ruby_app

RUN rails new /hello_world --force --skip-namespace

WORKDIR /hello_world

Dockerfile - 2

FROM ft-rails:on-build
EXPOSE 3000
CMD ["rails", "s", "-b", "0.0.0.0", "-p", "3000"]

Gemfile

source 'https://rubygems.org'
gem 'rails', '~>5'
